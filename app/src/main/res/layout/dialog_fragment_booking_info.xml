<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_body"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_fifty"
            android:background="@drawable/bg_header"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_ten"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_thirty" />

        <TextView
            android:id="@+id/tvJobType"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/metro_yellow_alpha"
            android:gravity="center"
            android:text="CAR HIRE JOBS"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_twenty_five" />

        <TextView
            android:id="@+id/tvTimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/metro_green"
            android:paddingBottom="2dp"
            android:paddingLeft="@dimen/dp_five"
            android:paddingTop="2dp"
            android:text="Job closes in 30 seconds"
            android:textColor="@android:color/white" />

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dp_five"
            android:layout_marginTop="@dimen/dp_five"
            android:background="@android:color/white"
            android:elevation="@dimen/dp_ten"
            card_view:cardCornerRadius="@dimen/dp_five">

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_five"
                android:text="@string/app_name"
                android:textColor="@android:color/black" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dp_five"
            android:layout_marginTop="@dimen/dp_five"
            android:background="@android:color/white"
            android:elevation="@dimen/dp_ten"
            card_view:cardCornerRadius="@dimen/dp_five">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivCar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/dp_five"
                    android:src="@drawable/car_hire" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_five"
                    android:layout_toRightOf="@id/ivCar"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/ivCar"
                        android:text="@string/destination"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="@dimen/sp_fifteen" />

                    <TextView
                        android:id="@+id/tvDestination"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sp_twenty" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_ten"
                        android:layout_toRightOf="@id/ivCar"
                        android:text="@string/distance"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="@dimen/sp_fifteen" />

                    <TextView
                        android:id="@+id/tvDistance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sp_twenty" />
                </LinearLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/metro_yellow_alpha"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_ten"
            android:paddingLeft="@dimen/dp_five"
            android:paddingTop="@dimen/dp_ten">

            <TextView
                android:id="@+id/tvCustomerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Customer Name : Ned Flanders"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_twenty" />

            <TextView
                android:id="@+id/tvHoursToRent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hours To Rent : 3 hours"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_twenty" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_fifteen"
            android:layout_marginLeft="@dimen/dp_ten"
            android:layout_marginRight="@dimen/dp_ten"
            android:layout_marginTop="@dimen/dp_twenty"
            android:orientation="vertical">

            <com.rey.material.widget.Button
                android:id="@+id/btnAttend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_ten"
                android:paddingBottom="@dimen/dp_ten"
                android:layout_gravity="center_horizontal"
                android:layout_weight="50"
                android:background="@color/metro_green"
                android:text="@string/accept"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_twenty"
                app:rd_enable="true"
                app:rd_maxRippleRadius="match_view"
                app:rd_rippleType="touch" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>